<body>
    <nav>
        <h1>Team Bookmarks</h1>
        <select id="userSelect" class="user-select">
            <option value="alice">üë©‚Äçüíº Alice</option>
            <option value="bob">üë®‚Äçüíª Bob</option>
            <option value="carol">üë©‚Äçüî¨ Carol</option>
        </select>
    </nav>

    <div class="form-container">
        <h2>Add a New Bookmark</h2>
        <input type="text" id="title" placeholder="Title">
        <textarea id="content" placeholder="Your comment"></textarea>
        <select id="category">
            <option value="work">üëî Work</option>
            <option value="personal">üåø Personal</option>
        </select>
        <button onclick="addBookmark()">Add Bookmark</button>
    </div>

    <div class="board" id="bookmarkBoard"></div>

    <script>
        let currentUser = 'alice';
        document.getElementById('userSelect').addEventListener('change', function() {
            currentUser = this.value;
            renderBookmarks();
        });

        const bookmarks = [
            { id: 1, title: "Project Deadline", content: "Submit project by Friday.", category: "work", user: "bob" },
            { id: 2, title: "Team Lunch", content: "Let's grab lunch on Thursday!", category: "personal", user: "alice" }
        ];

        function addBookmark() {
            const title = document.getElementById('title').value.trim();
            const content = document.getElementById('content').value.trim();
            const category = document.getElementById('category').value;

            if (title && content) {
                const newBookmark = {
                    id: bookmarks.length + 1,
                    title: title,
                    content: content,
                    category: category,
                    user: currentUser
                };
                bookmarks.unshift(newBookmark); // Add to the beginning
                renderBookmarks();
                
                // Clear form
                document.getElementById('title').value = '';
                document.getElementById('content').value = '';
            } else {
                alert("Please fill in both title and content!");
            }
        }

        function deleteBookmark(id) {
            const index = bookmarks.findIndex(bm => bm.id === id);
            if (index > -1 && bookmarks[index].user === currentUser) {
                bookmarks.splice(index, 1);
                renderBookmarks();
            } else {
                alert("You can only delete your own bookmarks!");
            }
        }

        function renderBookmarks() {
            const board = document.getElementById('bookmarkBoard');
            board.innerHTML = '';
            bookmarks.forEach(bm => {
                const bookmark = document.createElement('div');
                bookmark.className = `bookmark ${bm.category}`;
                bookmark.innerHTML = `
                    <h3>${bm.title}</h3>
                    <p>${bm.content}</p>
                    <div class="user">Added by ${getUserIcon(bm.user)} ${bm.user}</div>
                    <button class="delete-btn" onclick="deleteBookmark(${bm.id})">X</button>
                `;
                board.appendChild(bookmark);
            });
        }

        function getUserIcon(user) {
            const icons = { alice: 'üë©‚Äçüíº', bob: 'üë®‚Äçüíª', carol: 'üë©‚Äçüî¨' };
            return icons[user] || 'üë§';
        }

        renderBookmarks();
    </script>
</body>
